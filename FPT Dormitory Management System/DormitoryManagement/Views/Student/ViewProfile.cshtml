
@{
    ViewBag.Title = "ViewProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container container-profile" style="margin-top: 100px;">
    <div class="row gutters">
        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
            <div class="card h-100">
                <div class="card-body">
                    <div class="account-settings">
                        <div class="user-profile">
                            <div class="user-avatar" style="max-width:200px; max-height:200px;">
                                <img src="http://placekitten.com/400/400" alt="User Avatar" style="width:100%; height: 100%; object-fit:cover; border-radius:50%;">
                            </div>
                            <h5 class="user-name" style="margin-top: 15px; text-align:center">@ViewBag.StudentName</h5>
                            <h6 class="user-email" style="font-size: 0.95rem;">@ViewBag.StudentEmail</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
            <div class="card h-100">
                <form action="index.html" method="post">
                    <div class="card-body">
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mb-2 text-primary">Personal Details</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="studentCode">Student Code:</label>
                                    <input type="text" class="form-control" id="studentCode" name="studentCode" placeholder="student code" value=@ViewBag.StudentCode readonly>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="gender">Gender</label>
                                    <input type="text" class="form-control" id="gender" name="gender" placeholder="gender" value=@ViewBag.StudentGender readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mt-3 mb-2 text-primary">Dormitory Detail</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="Street">Room </label>
                                    <input type="text" class="form-control" id="Street" name="room" placeholder="ex: A101" value=@ViewBag.Room readonly>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="ciTy">Bed Numbers</label>
                                    <input type="text" class="form-control" id="ciTy" name="bed" placeholder="ex: 1" value=@ViewBag.Bed readonly>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="sTate">Electric Usage</label>
                                    <input type="text" class="form-control" id="sTate" name="electricNumber"
                                           placeholder="Your current electric using number. ex: 50" value=@ViewBag.UsageElectric readonly>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="zIp">Water Usage</label>
                                    <input type="text" class="form-control" id="zIp" name="waterNumber"
                                           placeholder="Your current water using number. ex: 50" value=@ViewBag.UsageWater readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


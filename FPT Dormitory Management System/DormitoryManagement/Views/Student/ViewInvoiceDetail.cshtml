@using DormitoryManagement.Models;
@model DormitoryManagement.Models.Invoice
@{
    Account account = Session["Account"] as Account;
}
@{
    ViewBag.Title = "ViewInvoiceDatail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="container-invoicedetail-heading">
    <h2 class="text-center">Invoice Detail</h2>
</div>
<div class="container">
    <div class="receipt-content">
        <div class="container bootstrap snippets bootdey">
            <div class="row">
                <div class="col-md-12">
                    <!--   go back link   -->
                    <a href="javascript:history.back()"
                       style="color: black; display: inline-block; cursor:pointer; margin-top:30px; margin-left: 2px;">
                        <i class="fas fa-arrow-left"></i> To Invoices
                    </a>
                    <div class="invoice-wrapper">
                        <div class="intro">
                            Hi <strong>@Model.Student.StudentCode</strong>,
                            <br>
                            This is the receipt for a payment of <strong>@string.Format("{0:N0}", @Model.Amount)  </strong> VNĐ for @Model.InvoiceType.Name
                        </div>

                        <div class="payment-info">
                            <div class="row">
                                <div class="col-sm-6">
                                    <span>Payment No.</span>
                                    <strong>@Model.Id</strong>
                                </div>
                                <div class="col-sm-6 text-right">
                                    <span>Payment Date</span>
                                    <strong>@Convert.ToString(string.Format("{0:dd/MM/yyyy}", Model.DateCreated))</strong>
                                </div>
                            </div>
                        </div>

                        <div class="payment-details">
                            <div class="row">
                                <div class="col-sm-6">
                                    <span>@Model.Student.StudentCode </span>
                                </div>
                                <div class="col-sm-6 text-right">
                                    <span>Payment To</span>
                                    <strong>
                                        FPT University
                                    </strong>
                                </div>
                            </div>
                        </div>

                        <div class="line-items">
                            <div class="headers clearfix">
                                <div class="row">
                                    <div class="col-4">Description</div>
                                    <div class="col-3"></div>
                                    <div class="col-5 text-right">Amount</div>
                                </div>
                            </div>
                            <div class="items">
                                <div class="row item">
                                    <div class="col-4 desc">
                                        @Model.InvoiceType.Name
                                    </div>
                                    <div class="col-3 qty">
                                        @Model.NumberOfUse
                                    </div>
                                    <div class="col-5 amount text-right">
                                        @string.Format("{0:N0}", @Model.Amount)
                                    </div>
                                </div>
                            </div>
                            <div class="total text-right">
                                <p class="extra-notes">
                                    <strong>Note</strong>
                                    @Model.Note
                                </p>
                                <div class="field">
                                    Subtotal <span>@string.Format("{0:N0}", @Model.Amount)</span>
                                </div>
                                @*<div class="field">
                                        Discount <span>0%</span>
                                    </div>*@
                                <div class="field grand-total">
                                    Total <span>@string.Format("{0:N0}", @Model.Amount) VNĐ</span>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="footer">
                        <a class="btn btn-primary" href="@Url.Action("", "Student")">Back to home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@using DormitoryManagement.Models
@model DormitoryManagement.Models.Request
@{
    ViewBag.Title = "ReplyRequest";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="container-fluid">
    <div class="row register-form">
        <div class="col-md-10 offset-md-1">
            <form action="ReplyRequest" method="post" class="custom-form">
                <h1 style="text-align:center;">Reply</h1>
                <input type="hidden" name="id" value="@Model.Id" />
                
                <div class="form-row form-group">
                    <div class="col-md-12 col-xl-4 label-column">
                        <label class="col-form-label"
                               for="name-input-field">
                            Student name
                        </label>
                    </div>
                    <div class="col-md-12 col-xl-6 input-column">
                        <input type="text" readonly value="@Model.Student.Name"
                               class="form-control" />
                    </div>
                </div>
                <div class="form-row form-group">
                    <div class="col-md-12 col-xl-4 label-column">
                        <label class="col-form-label"
                               for="name-input-field">
                            Student code
                        </label>
                    </div>
                    <div class="col-md-12 col-xl-6 input-column">
                        <input type="text" readonly value="@Model.Student.StudentCode"
                               class="form-control" />
                    </div>
                </div>

                <div class="form-row form-group">
                    <div class="col-md-12 col-xl-4 label-column">
                        <label class="col-form-label"
                               for="email-input-field">
                            Type
                        </label>
                    </div>
                    <div class="col-md-12 col-xl-6 input-column">
                        <select name="typeId" class="form-control">
                            @foreach (RequestType rt in ViewBag.RequestTypes) {
                                if (rt.Id == @Model.RequestType.Id) {
                                    <option value="@rt.Id" selected>@rt.Name</option>
                                }
                                else {
                                    <option value="@rt.Id" >@rt.Name</option>
                                }
                            }
                            <option value="1">Electric</option>
                            <option value="2">Water</option>
                            <option value="3">Fine</option>
                        </select>
                    </div>
                </div>
                <div class="form-row form-group">
                    <div class="col-md-12 col-xl-4 label-column">
                        <label class="col-form-label"
                               for="name-input-field">
                            Purpose
                        </label>
                    </div>
                    <div class="col-md-12 col-xl-6 input-column">
                        <textarea class="form-control" name="purpose" readonly cols="30" rows="5">@Model.Purpose</textarea>
                    </div>
                </div>
                <div class="form-row form-group">
                    <div class="col-md-12 col-xl-4 label-column">
                        <label class="col-form-label"
                               for="name-input-field">
                            Reply
                        </label>
                    </div>
                    <div class="col-md-12 col-xl-6 input-column">
                        <textarea class="form-control" name="content" cols="30" rows="5"></textarea>
                    </div>
                </div>
                <div class="form-row form-group d-flex justify-content-center">
                    <button class="btn btn-primary submit-button" type="submit">Reply</button>
                </div>
            </form>

        </div>
    </div>
</div>

